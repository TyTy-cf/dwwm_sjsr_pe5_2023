{% extends 'back/base.html.twig' %}

{% block title %}
    {{ 'back.pages.category.index.title'|trans }}
{% endblock %}

{% block body %}

    <div class="d-flex my-4">
        <h1>{{ 'back.pages.category.index.title'|trans }}</h1>
        <a class="main-link my-auto ms-5"
           href="{{ path('app_admin_category_new') }}"
           title="{{ 'common.title.add'|trans }}"
        >
            <i class="fa fa-plus-circle fa-2x"></i>
        </a>
    </div>

    <table class="table table-dark table-hover table-striped">
        <thead>
            <tr>
                <th>{{ 'back.pages.category.index.table.header.name'|trans }}</th>
                <th>{{ 'back.common.table.header.action'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>
                    <div class="d-flex">
                        <a class="main-link my-auto"
                           href="{{ path('app_admin_category_show', {'slug': category.slug}) }}"
                           title="{{ 'common.title.see'|trans }}"
                        >
                            <i class="fa fa-eye"></i>
                        </a>
                        <a class="main-link ms-2 my-auto"
                           href="{{ path('app_admin_category_edit', {'slug': category.slug}) }}"
                           title="{{ 'common.title.edit'|trans }}"
                        >
                            <i class="fa fa-pen"></i>
                        </a>
                        {% include 'back/pages/category/_delete_form.html.twig' %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ 'common.table.empty'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
